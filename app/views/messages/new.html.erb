<div class="row">
  <form class="col s12 center-col">
    <%= form_for @message do |f| %>
      <% if @message.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= "#{pluralize(@message.errors.count, "error")} prohibited this message from being sent:" %>
          </h2>

          <ul>
            <% @message.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          <ul>
        </div>
      <% end %>

      <div class="row">
        <div class="input-field col s4">
          <%= f.text_field :name %>
          <label>Full Name</label>
        </div>

        <div class="input-field col s4">
          <%= f.text_field :email %>
          <label data-error="wrong" data-success="right">Email</label>
        </div>

        <div class="input-field col s4">
          <%= f.text_field :number %>
          <label data-error="wrong" data-success="right">Phone Number</label>
        </div>
      </div>
      <div class="row">
        <div class="iput-field col s12">
          <textarea id="textarea1" class="materialize-textarea"></textarea>
          <label for="textarea1">Textarea</label>
        </div>
      </div>
      <%= f.submit 'Send', class: 'btn waves-effect waves-light'%>
    <% end %>
  </form>
</div>
